<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Glyph Matrix SDK permission -->
    <uses-permission android:name="com.nothing.ketchum.permission.ENABLE"/>

    <!-- Network permission for future HTTP communication -->
    <uses-permission android:name="android.permission.INTERNET"/>

    <!-- Notification access -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS"/>

    <!-- Wake lock for background operations -->
    <uses-permission android:name="android.permission.WAKE_LOCK"/>

    <!-- Query all packages - needed to see all installed apps (Android 11+) -->
    <uses-permission android:name="android.permission.QUERY_ALL_PACKAGES"
        tools:ignore="QueryAllPackagesPermission" />

    <!-- Foreground service permissions for reliable background operation -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_DATA_SYNC" />

    <!-- Battery optimization exemption -->
    <uses-permission android:name="android.permission.REQUEST_IGNORE_BATTERY_OPTIMIZATIONS" />

    <!-- Restart service after device reboot -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.NotiGlyph"
        tools:targetApi="31">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.NotiGlyph">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Notification Listener Service -->
        <service
            android:name=".service.NotificationParserService"
            android:enabled="true"
            android:exported="true"
            android:foregroundServiceType="dataSync"
            android:permission="android.permission.BIND_NOTIFICATION_LISTENER_SERVICE">
            <intent-filter>
                <action android:name="android.service.notification.NotificationListenerService" />
            </intent-filter>
        </service>

        <!-- Glyph Toy Service -->
        <service
            android:name=".glyph.GlyphToyService"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="com.nothing.glyph.TOY" />
            </intent-filter>

            <!-- Toy Name displayed in Glyph settings -->
            <meta-data
                android:name="com.nothing.glyph.toy.name"
                android:resource="@string/glyph_toy_name" />

            <!-- Toy Summary description -->
            <meta-data
                android:name="com.nothing.glyph.toy.summary"
                android:resource="@string/glyph_toy_summary" />

            <!-- Preview Image shown in Glyph settings -->
            <meta-data
                android:name="com.nothing.glyph.toy.image"
                android:resource="@drawable/ic_launcher_foreground" />

            <!-- Enable Always-On Display (AOD) support -->
            <meta-data
                android:name="com.nothing.glyph.toy.aod_support"
                android:value="1" />
        </service>
    </application>

</manifest>